{
  "name": "todo-md",
  "displayName": "TODO.md",
  "description": "The TODO list on your side!",
  "publisher": "ThunderStudio",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todo-md",
          "title": "TODO.md",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "todo-md": [
        {
          "type": "webview",
          "id": "todo-md.view",
          "name": "TODO.md"
        }
      ]
    },
    "commands": [
      {
        "command": "todo-md.add-item",
        "category": "TODO.md",
        "title": "Add TODO Item"
      },
      {
        "command": "todo-md.add-item-in-view",
        "category": "TODO.md",
        "title": "Add TODO Item",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "todo-md.add-item-in-view",
          "group": "navigation",
          "when": "view == todo-md.view && (workbenchState == folder || workbenchState == workspace)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "build": "vsce package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.14.4+sha512.c8180b3fbe4e4bca02c94234717896b5529740a6cbadf19fa78254270403ea2f27d4e1d46a08a0f56c89b63dc8ebfd3ee53326da720273794e6200fcf0d184ab",
  "dependencies": {
    "@vscode/codicons": "^0.0.36"
  },
  "vsce": {
    "dependencies": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mikelei8291/TODO.md.git"
  }
}
